[MASTER]
load-plugins=pylint_ml_smells
init-hook='import sys; sys.path.append("src")'

[MESSAGES CONTROL]
disable=missing-docstring,invalid-name,too-few-public-methods

[FORMAT]
max-line-length=150
exclude = __init__.py

[REPORTS]
output-format=text
score=yes

[DESIGN]
max-args=5
max-locals=15
max-returns=6